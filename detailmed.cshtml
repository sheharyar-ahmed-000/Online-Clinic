@model medicines;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap List Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Medicines List</h1>
        <div class="mb-3">
            <img src="@("~/medimages/"+Model.med_image)" asp-append-version=true width="200px" height="200px">
        </div>
        <ul class="list-group">
            <li class="list-group-item"><h4>Medicine ID: @Model.med_id</h4></li>
            <li class="list-group-item"><h4>Medicine Name: @Model.med_name</h4></li>
            <li class="list-group-item"><h4>Medicine Type: @Model.med_type</h4></li>
            <li class="list-group-item"><h4>Medicine Code: @Model.med_code</h4></li>
            <li class="list-group-item"><h4>Medicine Price: @Model.med_price</h4></li>
            <li class="list-group-item"><h4>Medicine Description: @Model.med_description</h4></li>
            <li class="list-group-item"><h4>Medicine Cateogry ID: @Model.medicinecat_id</h4></li>


        </ul>
        <div class="mt-3">
            <a href="@Url.Action("addmed","admin")"> <button type="button" class="btn btn-success">Add Medicines</button></a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
