@model medicines;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Update Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1 class="mt-5 mb-4">Medicines Update Form</h1>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" class="form-control" name="med_id" value="@Model.med_id" />
            <div class="mb-3">
                <label for="Medicine Name" class="form-label">Medicine Name</label>
                <input type="text" class="form-control" name="med_name" value="@Model.med_name" placeholder="Enter your medicine name" required>
            </div>
            <div class="mb-3">
                <label for="Medicine type" class="form-label">Medicine Type</label>
                <input type="text" class="form-control" name="med_type" value="@Model.med_type" placeholder="Enter your medicine type" required>
            </div>
            <div class="mb-3">
                <label for="Medicine code" class="form-label">Medicine Code</label>
                <input type="text" class="form-control" name="med_code" value="@Model.med_code" placeholder="Enter your medicine code" required>
            </div>
            <div class="mb-3">
                <label for="Medicine price" class="form-label">Medicine Price</label>
                <input type="number" class="form-control" name="med_price" value="@Model.med_price" placeholder="Enter your medicine price" required>
            </div>
            <div class="mb-3">
                <label for="medicine description" class="form-label">Medicine Description</label>
                <textarea class="form-control" name="med_description" rows="5"></textarea>
            </div>
            <div class="mb-3">
                @Html.Partial("selectcatmed",ViewData["category"]);
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Medicine Image</label>
                <input type="file" class="form-control" name="med_image" value="@Model.med_image" placeholder="Upload your medicine image" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

