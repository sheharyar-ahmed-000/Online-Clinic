@model List<medicines>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Medicines List</h1>
        <div class="mb-3">
            <a href="@Url.Action("addmed","admin")"><button type="button" class="btn btn-success">Add Medicines</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Medicine ID</th>
                    <th>Medicines Name</th>
                    <th>Medicines Type</th>
                    <th>Medicines Code</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.med_id</td>
                        <td>@data.med_name</td>
                        <td>@data.med_type</td>
                        <td>@data.med_code</td>
                        <td>
                            <a href="@Url.Action("updatemed","admin",new{id=data.med_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deletemed","admin",new{id=data.med_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                            <a href="@Url.Action("detailmed","admin",new{id=data.med_id})"><button type="button" class="btn btn-info btn-sm">Detail</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
