@model List<medicinecategory>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Category of Medicines List</h1>
        <div class="mb-3">
            <a href="@Url.Action("addcatmed","admin")"><button type="button" class="btn btn-success">Add Category Of Medicines</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Cateogry ID</th>
                    <th>Cateogry Name</th>
                    <th>Cateogry Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.medicinecat_id</td>
                        <td>@data.medicinecat_name</td>
                        <td>
                            <img src="@("~/catmedimages/"+Model[0].medicinecat_image)" asp-append-version=true width="50px" height="50px">
                        </td>
                        <td>
                            <a href="@Url.Action("updatecatmed","admin",new{id=data.medicinecat_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deletecatmed","admin",new{id=data.medicinecat_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

