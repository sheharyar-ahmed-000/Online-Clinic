@model List<educationevents>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Event List</h1>
        <div class="mb-3">
            <a href="@Url.Action("addevent","admin")"><button type="button" class="btn btn-success">Add Education Event</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Event Id</th>
                    <th>Event Name</th>
                    <th>Event Date</th>
                    <th>Event Time</th>
                    <th>Event Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.event_id</td>
                        <td>@data.event_name</td>
                        <td>@data.event_date</td>
                        <td>@data.event_time</td>
                        <td>@data.event_location</td>
                        <td>
                            <a href="@Url.Action("updateevent","admin",new{id=data.event_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deleteevent","admin",new{id=data.event_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                            <a href="@Url.Action("detailevent","admin",new{id=data.event_id})"><button type="button" class="btn btn-info btn-sm">Detail</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
