@model List<teachers>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Feedback List</h1>
        <div class="mb-3">
            <a href="@Url.Action("teacherimg","admin")"><button type="button" class="btn btn-success">Add Teachers</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Teacher ID</th>
                    <th>Teacher Name</th>
                    <th>Teacher Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.teacher_id</td>
                        <td>@data.teacher_name</td>
                        <td>@data.teacher_img</td>
                        <td>
                            <a href="@Url.Action("updateteacher","admin",new{id=data.teacher_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deleteteacher","admin",new{id=data.teacher_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
    
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

