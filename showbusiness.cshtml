@model List<bussinesstransaction>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Business Transaction List</h1>
        <div class="mb-3">
            <a href="@Url.Action("addbusiness","admin")"><button type="button" class="btn btn-success">Add Business Transaction</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Transaction ID</th>
                    <th>Transaction Date</th>
                    <th>Transaction Sector</th>
                    <th>Transaction ProductName</th>
                    <th>Transaction Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.bussiness_id</td>
                        <td>@data.TransactionDate</td>
                        <td>@data.Sector</td>
                        <td>@data.ProductName</td>
                        <td>@data.Amount</td>
                        <td>
                            <a href="@Url.Action("updatebusiness","admin",new{id=data.bussiness_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deletebusiness","admin",new{id=data.bussiness_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
