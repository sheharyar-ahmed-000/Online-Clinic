@model List<contact>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Category of Medicines List</h1>
        <div class="mb-3">
            <a href="@Url.Action("contact","admin")"><button type="button" class="btn btn-success">Add Contact</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Contact ID</th>
                    <th>Contact Name</th>
                    <th>Contact Message</th>
                    <th>Contact Email</th>
                    <th>Contact Subject</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.contact_id</td>
                        <td>@data.contact_name</td>
                        <td>@data.contact_message</td>
                        <td>@data.contact_email</td>
                        <td>@data.contact_subject</td>
                        
                        <td>
                            
                            <a href="@Url.Action("deletecontact","admin",new{id=data.contact_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

