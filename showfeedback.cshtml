@model List<feedback>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Feedback List</h1>
        <div class="mb-3">
            <a href="@Url.Action("addfeedback","admin")"><button type="button" class="btn btn-success">Add Feedback</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Feedback ID</th>
                    <th>Feedback Name</th>
                    <th>Feedback Message</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.feedback_id</td>
                        <td>@data.feedback_name</td>
                        <td>@data.feedback_message</td>
                        <td>
                            <a href="@Url.Action("updatefeedback","admin",new{id=data.feedback_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deletefeedback","admin",new{id=data.feedback_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                            <a href="@Url.Action("detailfeedback","admin",new{id=data.feedback_id})"><button type="button" class="btn btn-info btn-sm">Detail</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

