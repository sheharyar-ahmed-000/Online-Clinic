@model List<scientifictools>;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Table Example</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1>Scientific Tools List</h1>
        <div class="mb-3">
            <a href="@Url.Action("addscitools","admin")"><button type="button" class="btn btn-success">Add Scientific Tools</button></a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Scientific ID</th>
                    <th>Scientific Name</th>
                    <th>Scientific Description</th>
                    <th>Scientific Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@data.sci_id</td>
                        <td>@data.sci_name</td>
                        <td>@data.sci_description</td>
                        <td>@data.sci_price</td>
                        <td>
                            <a href="@Url.Action("updatescitools","admin",new{id=data.sci_id})"><button type="button" class="btn btn-primary btn-sm">Update</button></a>
                            <a href="@Url.Action("deletescitools","admin",new{id=data.sci_id})"><button type="button" class="btn btn-danger btn-sm">Delete</button></a>
                            <a href="@Url.Action("detailscitools","admin",new{id=data.sci_id})"><button type="button" class="btn btn-info btn-sm">Detail</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
