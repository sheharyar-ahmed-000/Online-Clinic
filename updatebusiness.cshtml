@model bussinesstransaction;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Update Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1 class="mt-5 mb-4">Business Transaction Update Form</h1>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" class="form-control" name="bussiness_id" value="@Model.bussiness_id" />
            <div class="mb-3">
                <label for="fullName" class="form-label">Business Transaction Date</label>
                <input type="date" class="form-control" name="TransactionDate" value="@Model.TransactionDate" placeholder="Enter your transaction date" required>
            </div>
            <div class="mb-3">
                <label for="sector" class="form-label">Business Transaction Sector</label>
                <input type="text" class="form-control" name="Sector" value="@Model.Sector" placeholder="Enter your transaction sector" required>
            </div>
            <div class="mb-3">
                <label for="product name" class="form-label">Business Transaction Product</label>
                <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" placeholder="Enter your transaction product" required>
            </div>
            <div class="mb-3">
                <label for="amount" class="form-label">Business Transaction Amount</label>
                <input type="text" class="form-control" name="Amount" value="@Model.Amount" placeholder="Enter your transaction amount" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

