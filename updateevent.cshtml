@model educationevents;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Education Event Update Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1 class="mt-5 mb-4">Education Event Update Form</h1>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" class="form-control" name="event_id" value="@Model.event_id" />
            <div class="mb-3">
                <label for="fullName" class="form-label">Event Name</label>
                <input type="text" class="form-control" name="event_name" value="@Model.event_name" placeholder="Enter your event name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Event Date</label>
                <input type="date" class="form-control" name="event_date" value="@Model.event_date" placeholder="Enter your date" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Event Time</label>
                <input type="text" class="form-control" name="event_time" value="@Model.event_time" placeholder="Enter your event time" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Event Image</label>
                <input type="text" class="form-control" name="event_location" value="@Model.event_location" placeholder="Enter your event location" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Event Teacher</label>
                <input type="text" class="form-control" name="event_teacher" value="@Model.event_teacher" placeholder="Enter your event teacher" required>
            </div>
            <div class="mb-3">
                <label for="gender" class="form-label">Event Image</label>
                <input type="file" class="form-control" name="event_image" value="@Model.event_image" placeholder="Enter your event image" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
