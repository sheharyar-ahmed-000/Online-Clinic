@model scientifictools;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scientific Tools Update Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h1 class="mt-5 mb-4">Scientific Tools Update Form</h1>
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" class="form-control" name="sci_id" value="@Model.sci_id" />
            <div class="mb-3">
                <label for="Scientific Tool Name" class="form-label">Scientific Tool Name</label>
                <input type="text" class="form-control" name="sci_name" value="@Model.sci_name" placeholder="Enter your scientific tool name" required>
            </div>
            <div class="mb-3">
                <label for="Scientific Tool Description" class="form-label">Scientific Tool Description</label>
                <textarea class="form-control"  name="sci_description" rows="5"></textarea>
            </div>
            <div class="mb-3">
                <label for="Scientific Tool Price" class="form-label">Scientific Tool Price</label>
                <input type="text" class="form-control" name="sci_price" value="@Model.sci_price" placeholder="Enter your scientific tool price" required>
            </div>
            <div class="mb-3">
                <label for="Scientific Tool Image" class="form-label">Upload Scientific Tool Image</label>
                <input type="file" class="form-control" name="sci_image" value="@Model.sci_image" placeholder="Upload your Scientific Tool Image" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
